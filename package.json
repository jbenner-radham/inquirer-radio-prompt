{
  "name": "inquirer-radio-prompt",
  "version": "1.2.0",
  "description": "An Inquirer radio button prompt.",
  "keywords": [
    "answer",
    "cli",
    "command-line",
    "input",
    "inquirer",
    "prompt",
    "radio",
    "radio-button",
    "stdin",
    "stdout",
    "terminal",
    "tty",
    "tui"
  ],
  "homepage": "https://github.com/jbenner-radham/inquirer-radio-prompt#readme",
  "bugs": {
    "url": "https://github.com/jbenner-radham/inquirer-radio-prompt/issues"
  },
  "repository": "github:jbenner-radham/inquirer-radio-prompt",
  "license": "MIT",
  "author": "James Benner <james.benner@gmail.com> (https://www.jamesbenner.com/)",
  "type": "module",
  "exports": {
    "require": {
      "types": "./dist/cjs/index.d.ts",
      "default": "./dist/cjs/index.js"
    },
    "import": {
      "types": "./dist/esm/index.d.ts",
      "default": "./dist/esm/index.js"
    }
  },
  "directories": {
    "example": "example"
  },
  "files": [
    "dist",
    "example",
    "images"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm run build:cjs; npm run build:esm",
    "build:cjs": "npm run build:cjs:js; npm run build:cjs:package; npm run build:cjs:types",
    "build:cjs:js": "esbuild src/index.ts --bundle --format=cjs --outfile=dist/cjs/index.js --platform=node --sourcemap",
    "build:cjs:package": "echo '{\"type\": \"commonjs\"}' > dist/cjs/package.json",
    "build:cjs:types": "tsc --declaration --declarationMap --emitDeclarationOnly --outDir dist/cjs",
    "build:esm": "npm run build:esm:js; npm run build:esm:package; npm run build:esm:types",
    "build:esm:js": "esbuild src/index.ts --bundle --format=esm --outfile=dist/esm/index.js --platform=node --sourcemap",
    "build:esm:package": "echo '{\"type\": \"module\"}' > dist/esm/package.json",
    "build:esm:types": "tsc --declaration --declarationMap --emitDeclarationOnly --outDir dist/esm",
    "clean": "rimraf dist",
    "demo": "agg demo.cast images/demo.gif",
    "lint": "eslint .",
    "lint:fix": "npm run lint --fix",
    "prepare": "husky",
    "prepublishOnly": "npm run build",
    "test": "vitest --watch=false",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@inquirer/core": "^10.0.0",
    "@inquirer/figures": "^1.0.7",
    "@inquirer/type": "^3.0.0",
    "ansi-escapes": "^7.0.0",
    "yoctocolors": "^2.1.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.0",
    "@eslint/js": "^9.12.0",
    "@inquirer/testing": "^2.1.35",
    "@stylistic/eslint-plugin": "^2.9.0",
    "esbuild": "0.24.0",
    "eslint": "^9.12.0",
    "globals": "^15.10.0",
    "husky": "^9.1.6",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.8.1",
    "vitest": "^2.1.2"
  },
  "engines": {
    "node": ">=18"
  }
}
